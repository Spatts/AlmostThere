<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtRadius"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp"
        android:hint="0.25"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/radius_button"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/sendWhenMiles"
        android:layout_width="141dp"
        android:layout_height="41dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:hint="15.0"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSetContact"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/numberSMS"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:hint="4242424242"
        android:inputType="phone"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sendWhenMiles"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/messageSMS"
        android:layout_width="351dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="72dp"
        android:hint="I will be there soon! (Message2 by radius)"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="5"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/messageSMS1"
        android:layout_width="351dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="124dp"
        android:hint="I will be there in 15 miles! (Message1 by distance)"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="5"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtChooseRadius"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/choose_radius"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"
        tools:ignore="TextViewEdits"
        tools:text="Choose Radius" />

    <TextView
        android:id="@+id/txtChooseAlarm"
        android:layout_width="195dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/choose_alarm"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseRadius"
        tools:ignore="TextViewEdits"
        tools:text="Choose Alarm" />


    <TextView
        android:id="@+id/setDistSMS"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Text By Distance"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonSetSendWhen"
        app:layout_constraintEnd_toStartOf="@+id/sendWhenMiles"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextViewEdits"
        tools:text="Text By Distance" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/radius_button"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="23dp"
        android:text="Set Radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRadius" />

    <Button
        android:id="@+id/buttonSetContact"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="18dp"
        android:text="Set Contact"
        app:layout_constraintBottom_toTopOf="@+id/messageSMS1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSetSendWhen" />

    <Button
        android:id="@+id/buttonSetContact2"
        android:layout_width="183dp"
        android:layout_height="62dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:text="Choose Contact"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/setDistSMS"
        app:layout_constraintEnd_toStartOf="@+id/numberSMS"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSetSendWhen"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="3dp"
        android:text="Set Text Distance"
        app:layout_constraintBottom_toTopOf="@+id/messageSMS1"
        app:layout_constraintEnd_toStartOf="@+id/buttonSetContact"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/textSMSConfirm"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="39dp"
        android:text="Radius Message"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textSMSConfirmDist"
        app:layout_constraintTop_toBottomOf="@+id/messageSMS"
        app:layout_constraintVertical_bias="0.583" />

    <Button
        android:id="@+id/textSMSConfirmDist"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="39dp"
        android:text="Distance Message"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textSMSConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageSMS"
        app:layout_constraintVertical_bias="0.583" />


</android.support.constraint.ConstraintLayout>