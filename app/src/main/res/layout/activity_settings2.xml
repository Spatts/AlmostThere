<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backToMain"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="355dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtRadius"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="581dp"
        android:inputType="numberDecimal"
        android:hint="0.25"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/numberSMS"
        android:layout_width="157dp"
        android:layout_height="59dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="9dp"
        android:hint="424-242-4242"
        android:inputType="phone"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/messageSMS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtContact"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseAlarm" />

    <EditText
        android:id="@+id/messageSMS"
        android:layout_width="351dp"
        android:layout_height="133dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="108dp"
        android:hint="I will be there soon!"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtChooseRadius"
        android:layout_width="203dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/choose_radius"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168"
        tools:ignore="TextViewEdits"
        tools:text="Choose Radius" />

    <TextView
        android:id="@+id/txtChooseAlarm"
        android:layout_width="195dp"
        android:layout_height="41dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="414dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/choose_alarm"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseRadius"
        tools:ignore="TextViewEdits"
        tools:text="Choose Alarm" />


    <TextView
        android:id="@+id/txtContact"
        android:layout_width="178dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Contact"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/messageSMS"
        app:layout_constraintEnd_toStartOf="@+id/numberSMS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseAlarm"
        tools:ignore="TextViewEdits"
        tools:text="Contact" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/radius_button"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="476dp"
        android:text="Set Radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRadius" />

    <Button
        android:id="@+id/textSMSConfirm"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="39dp"
        android:text="Set Message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageSMS" />


</android.support.constraint.ConstraintLayout>